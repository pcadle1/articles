<form action="/articles/new" method = 'post'>
    <label for="title">Title</label>
    <input type="text" id = "title" name = "title" value="{{info.title}}">

    <label for="url">URL</label>
    <input type="url" id = "url" name = "url" value = "{{info.url}}">

    <label for="description">Description</label>
    <input type="text" id = "description" name = "description" value = "{{info.description}}">
    <input type="submit">
</form>

{{#if error}}
<h4>{{this.error}}</h4>
{{/if}}